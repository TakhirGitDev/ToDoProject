@model IEnumerable<ToDo.Web.Models.TaskDto>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Задачи</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="TaskCreate" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Добавить </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Наименование
                </th>
                <th>
                    Описание
                </th>
                <th>
                    Статус
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        <select asp-for="@item.StatusId" class="form-control" asp-items="ViewBag.Stats">
                            <option>Выберите статус</option>
                        </select>
                        
                    </td>
                    <td>
                        <a asp-action="TaskEdit" class="btn btn-success" asp-route-Id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="TaskDelete" class="btn btn-danger" asp-route-Id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
